    <script>
      const menuBtn = document.getElementById("menuToggleBtn");
      const closeBtn = document.getElementById("menuCloseBtn");
      const mobileMenu = document.getElementById("mobileMenu");
      const menuIcon = document.getElementById("menuIcon");
      const menuPath = document.getElementById("menuPath");
      const enhanceBtn = document.querySelector(".enhance button");
      const profile = document.querySelector("#profileBtn");
      const popupContainer = document.querySelector("#profilePopupContainer");
      let isPopupVisible = false;
      const plusBtn = document.getElementById("plusBtn");
      const linksFeature = document.querySelector(".linksFeature");



      function showInfoToast(message, position = "top-left", duration = 4000) {
        const container = document.querySelector("#toast-container");

        // Update position
        container.className = `toast-container ${position}`;

        // Create toast div
        const toast = document.createElement("div");
        toast.className = "toast";
        toast.innerHTML = `<i class="fa-solid fa-circle-info fa-sm" style="color: #ffffff;"></i>  ${message}`;

        // Append to container
        container.appendChild(toast);

        // Remove after duration
        setTimeout(() => {
          toast.remove();
        }, duration);
      }

      plusBtn.addEventListener("click", () => {
        showInfoToast("Feature coming soon!", "top-left");
      });

      linksFeature.addEventListener("click",()=>{
        showInfoToast("Feature coming soon!", "top-left");
      })
      profile.addEventListener("click", () => {
        if (isPopupVisible) {
          popupContainer.innerHTML = "";
          isPopupVisible = false;
        } else {
          popupContainer.innerHTML = `
      <div id="profilePopup" style="
        position: absolute;
        top: 60px;
        right: 16px;
        width: 240px;
        padding: 18px;
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.25);
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        z-index: 999;
        text-align: center;
      ">
        <h4 style="margin: 0 0 6px; font-size: 17px; font-weight: 600; color: #00ffffcc;">Magnus Welcomes You</h4>
        <p style="margin: 0 0 14px; font-size: 15px;">👋 Hello, <%= fullName %></p>
        <form action="/logout" method="get" style="margin: 0;">
          <button type="submit" style="
            width: 100%;
            padding: 10px;
            background: linear-gradient(135deg, #ff416c, #ff4b2b);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease;
          " onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
            🚪 Logout
          </button>
        </form>
      </div>
    `;
          isPopupVisible = true;
        }
      });

      document.addEventListener("click", (e) => {
        if (!popupContainer.contains(e.target) && e.target !== profile) {
          popupContainer.innerHTML = "";
          isPopupVisible = false;
        }
      });

      enhanceBtn.addEventListener("click", async () => {
        const prompt = promptInput.value.trim();
        if (!prompt) return alert("Please enter a prompt.");

        enhanceBtn.innerHTML = `<i class="fa-solid fa-spinner fa-spin fa-lg" style="color: #ffffff"></i> Enhancing...`;

        try {
          const res = await fetch("https://magnusai-ncz8.onrender.com/api/enhance", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ prompt }),
          });

          const data = await res.json();
          if (data.enhanced) {
            promptInput.value = data.enhanced;
            promptInput.dispatchEvent(new Event("input"));
          } else {
            alert("Something went wrong.");
          }
        } catch (err) {
          alert("Error contacting server.");
          console.error(err);
        }

        enhanceBtn.innerHTML = `<i class="fa-solid fa-wand-magic-sparkles fa-lg" style="color: #ffffff"></i> Enhance prompt`;
      });

      // Open mobile menu
      menuBtn.addEventListener("click", () => {
        mobileMenu.classList.add("active");
        document.body.style.overflow = "hidden";
      });

      // Close mobile menu
      closeBtn.addEventListener("click", () => {
        mobileMenu.classList.remove("active");
        document.body.style.overflow = "unset";
      });
      const promptInput = document.getElementById("promptInput");
      const uploadBtn = document.getElementById("uploadBtn");

      promptInput.addEventListener("input", () => {
        if (promptInput.value.trim()) {
          uploadBtn.classList.remove("btn-disabled");
        } else {
          uploadBtn.classList.add("btn-disabled");
        }
      });

      // Add this JavaScript to your dashboard.ejs file, replacing the existing uploadBtn click handler

      uploadBtn.addEventListener("click", () => {
        const prompt = promptInput.value.trim();
        if (!prompt) {
          showInfoToast("Please enter a prompt first!", "top-left");
          return;
        }

        // Add loading state
        uploadBtn.innerHTML = `<i class="fa-solid fa-spinner fa-spin fa-lg" style="color: #ffffff"></i>`;
        uploadBtn.classList.add("btn-disabled");

        // Simulate a brief loading period before redirect
        setTimeout(() => {
          // Redirect to build page with prompt as query parameter
          window.location.href = `/build?prompt=${encodeURIComponent(prompt)}`;
        }, 800);
      });

      const suggestions = document.querySelectorAll(".suggestion");
      //   const promptInput = document.getElementById('promptInput');

      suggestions.forEach((tag) => {
        tag.addEventListener("click", () => {
          promptInput.value = tag.textContent;
          promptInput.dispatchEvent(new Event("input")); // triggers uploadBtn enabling
        });
      });
      document.getElementById("year").textContent = new Date().getFullYear();
    </script>
