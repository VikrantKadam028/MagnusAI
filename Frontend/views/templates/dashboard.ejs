        color: #aaa;
        text-decoration: none;
        transition: 0.3s;
      }
      .footer-col ul a:hover {
        color: #38bdf8;
      }
      .footer-bottom {
        text-align: center;
        padding-top: 40px;
        border-top: 1px solid #2d2d2d;
        font-size: 0.9rem;
        color: #777;
      }
      .footer-bottom span {
        color: #f87171;
      }
      .center-wrapper {
        width: 100%;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
      }
      .holographic-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.375rem 0.75rem; /* px-3 py-1.5 */
        font-size: 0.775rem; /* text-sm */
        font-weight: 500; /* font-medium */
        border-radius: 9999px; /* rounded-full */
        backdrop-filter: blur(10px); /* backdrop-blur-md */
        border: 1px solid rgba(255, 255, 255, 0.3); /* border-white/30 */
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* shadow-lg */
        background: linear-gradient(
          -45deg,
          rgba(59, 130, 246, 0.3),
          rgba(147, 51, 234, 0.3),
          rgba(236, 72, 153, 0.3),
          rgba(59, 130, 246, 0.3)
        );
        background-size: 400% 400%;
        animation: gradient 3s ease infinite;
        transition: all 0.3s ease;
        margin: 10px auto;
        color: white;
        font-family: poppins;
        border: none;
      }

      .holographic-badge:hover {
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15); /* hover:shadow-xl */
        transform: scale(1.05); /* hover:scale-105 */
      }

      @keyframes gradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
      .live-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: red;
        margin-right: 8px;
        animation: blink 1s infinite;
        box-shadow: 0 0 6px red;
      }

      @keyframes blink {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0;
        }
      }
      .toast-container {
        position: fixed;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 1rem;
        max-width: 300px;
        pointer-events: none;
      }

      .toast-container.top-left {
        top: 3rem;
        left: 1rem;
      }
      .toast-container.top-right {
        top: 3rem;
        right: 1rem;
      }
      .toast-container.bottom-left {
        bottom: 1rem;
        left: 1rem;
      }
      .toast-container.bottom-right {
        bottom: 1rem;
        right: 1rem;
      }

      .toast {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #fff;
        padding: 12px 16px;
        border-radius: 8px;
        font-family: "Poppins", sans-serif;
        font-size: 0.9rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        animation: fadein 0.4s ease, fadeout 0.4s ease 3.6s;
        pointer-events: auto;
      }

      @keyframes fadein {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeout {
        from {
          opacity: 1;
          transform: translateY(0);
        }
        to {
          opacity: 0;
          transform: translateY(-10px);
        }
      }
    </style>
  </head>
