    <style>
      /* Reset & base styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: poppins;
      }
      body {
        font-family: sans-serif;
        background-color: black;
        overflow-x: hidden;
        /* background-color: #0f172a; */
      }
      .aurora-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        background: radial-gradient(
            circle at 20% 30%,
            rgba(255, 0, 150, 0.3),
            transparent 40%
          ),
          radial-gradient(
            circle at 80% 70%,
            rgba(0, 255, 255, 0.2),
            transparent 50%
          ),
          radial-gradient(
            circle at 50% 50%,
            rgba(0, 128, 255, 0.3),
            transparent 60%
          );
        filter: blur(120px);
        animation: auroraGlow 10s ease-in-out infinite alternate;
      }

      @keyframes auroraGlow {
        0% {
          transform: scale(1) translateY(0);
        }
        100% {
          transform: scale(1.1) translateY(-10%);
        }
      }
      a {
        text-decoration: none;
        color: inherit;
        transition: color 0.3s;
      }
      a:hover {
        color: black;
      }
      header {
        position: relative;
        z-index: 50;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(24px);
        /* box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); */
        border-radius: 20px;
      }
      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: transparent;
        padding: 1rem;
      }
      .nav-left,
      .nav-right {
        display: none;
        align-items: center;
      }
      .nav-left a,
      .nav-right a {
        margin: 0 0.75rem;
        color: gray;
        font-size: 0.9rem;
      }
      .signup-btn {
        padding: 8px 12px;
        /* border: 2px solid black; */
        border-radius: 8px;

        background-color: white;
        font-weight: 600;
        color: black;
      }
      .signup-btn:hover {
        background: rgb(190, 190, 190);
      }

      /* Center "MAGNUS" */
      .nav-brand {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        font-weight: bold;
        font-size: 1.1rem;
        color: whitesmoke;
        font-family: "audiowide";
      }
      .nav-brand a {
        font-family: "audiowide";
        font-size: 1.5rem;
      }

      /* Mobile Menu Button */
      .mobile-menu-btn {
        display: block;
      }
      .icon {
        width: 24px;
        height: 24px;
        stroke: black;
      }

      /* Mobile Sign Up Button */
      .mobile-signup {
        display: block;
      }

      /* Mobile Menu Overlay */
      .mobile-menu {
        position: fixed;
        inset: 0;
        background: white;
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
        display: flex;
        flex-direction: column;
      }
      .mobile-menu.active {
        transform: translateX(0);
      }
      .mobile-menu-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #ccc;
      }
      .mobile-nav-links {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        font-size: 1.2rem;
        margin-top: 2rem;
        color: gray;
      }

      /* Desktop Styles */
      @media (min-width: 768px) {
        .nav-left,
        .nav-right {
          display: flex;
          flex: 1;
        }

        .nav-left {
          justify-content: flex-start;
        }

        .nav-right {
          justify-content: flex-end;
        }

        .mobile-menu-btn,
        .mobile-signup,
        .mobile-menu {
          display: none;
        }
      }
      .landpage {
        width: 100vw;
        height: 100vh;
        /* background-color: grey; */
        display: flex;
        /* align-items: center; */
        /* justify-content: center; */
      }
      .main {
        width: 100%;
        height: auto;
        display: flex;
        /* align-items: center; */
        /* justify-content: center; */
        flex-direction: column;
        padding: 20px;
      }
      .heading {
        width: auto;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        /* margin-top: 30px; */
      }
      .heading h3 {
        font-size: 3.5rem;
        font-family: poppins;
        color: white;
      }
      .heading p {
        font-size: 18px;
        margin-top: 10px;
      }
      .card {
        width: 70%;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(24px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 1rem;
        /* box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4); */
        transition: box-shadow 0.3s;
        margin: 40px auto 10px auto;
      }

      .textarea {
        width: 100%;
        background: transparent;
        border: none;
        resize: none;
        font-size: 1rem;
        color: #f1f5f9;
        padding: 0.25rem;
        font-weight: 500;
        outline: none;
      }

      .action-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
      }

      .buttons-left,
      .buttons-right {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
      }

      .btn-square,
      .btn-rounded {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom right, #1f2937, #374151);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #9ca3af;
        cursor: pointer;
        transition: background 0.3s;
      }

      .btn-square:hover,
      .btn-rounded:hover {
        background: linear-gradient(to bottom right, #4b5563, #6b7280);
      }

      .btn-upload {
        background: linear-gradient(to bottom right, #2563eb, #1d4ed8);
        color: white;
      }

      .btn-upload:hover {
        background: linear-gradient(to bottom right, #1e40af, #1e3a8a);
      }

      .btn-disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }
      .enhance {
        width: 100%;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 99;
      }
      .enhance button {
        font-size: 13px;
        cursor: pointer;
        padding: 10px 14px;
        border: 1px solid white;
        background-color: transparent;
        border-radius: 50px;
        color: white;
        margin-top: 8px;
        transition: background-color 0.3s, transform 0.2s;
      }

      .enhance button:hover {
        background-color: rgba(255, 255, 255, 0.1);
        /* transform: scale(1.05); */
      }

      .enhance button i {
        margin-right: 6px;
      }
      .suggestions {
        width: 60%;
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
        justify-content: center;
        gap: 12px;
        padding: 1rem 0;
        margin-top: 50px;
        z-index: 99;
      }

      .suggestion {
        padding: 8px 15px;
        background: #9ca3af;
        color: #1f2937;
        border-radius: 9999px;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        /* white-space: nowrap; */
      }

      .suggestion:hover {
        background: #6b7280;
        color: white;
      }

      footer {
        color: white;
        padding: 60px 20px;
        /* border-top: 1px solid #2d2d2d; */
        margin: 0 auto;
        margin-top: 35px;
      }
      .footer-container {
        max-width: 1200px;
        /* margin: 0 auto; */
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 40px;
        padding-bottom: 20px;
      }
      .footer-logo {
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .footer-logo svg {
        width: 40px;
        height: 40px;
      }
      .footer-logo h3 {
